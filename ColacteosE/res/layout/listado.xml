<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/listaSimple"
        android:layout_width="wrap_content"
        android:layout_height="88dp" >

    </ListView>

    <Button
        android:id="@+id/btn_Rute"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Mi visita" />

    <Button
        android:id="@+id/btn_programVisita"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:text="Ejecutar visitas" />

    <Button
        android:id="@+id/btn_salir_rutero"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Cargar Visita" />

    <Button
        android:id="@+id/btn_utilidades"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="Utilidades" />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir" />

</LinearLayout>