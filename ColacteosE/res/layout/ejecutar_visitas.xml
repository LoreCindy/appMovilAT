<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/texnomAni"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:text="             Listas de Visitas"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txt_codigoAnimal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btn_actuFinca"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:text="Visitas Veterinaria" />

    <Button
        android:id="@+id/btn_elimFinca"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:text="Visitas Agronomia" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:text="Visitas Zootecnia" />

</LinearLayout>