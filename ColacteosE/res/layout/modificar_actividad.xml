<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_codigoAnimal"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/edt_idActi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:visibility="gone" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="62dp" >

        <TextView
            android:id="@+id/texnomAni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actividad:"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/edt_activi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="66dp" >

        <TextView
            android:id="@+id/txt_nombreAnimal"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="Costo:"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/edt_cosActi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_actuAct"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:text="@string/Actualizar" />

        <Button
            android:id="@+id/btn_elimActi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Eliminar" />
    </LinearLayout>

</LinearLayout>