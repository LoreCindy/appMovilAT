<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:text="Bienvenido Registre profesional"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="46dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_bienvenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.80"
            android:text="Nombres:" />

        <EditText
            android:id="@+id/txt_nombrepro"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.68"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="334dp"
        android:layout_height="40dp" >

        <TextView
            android:id="@+id/txt_nomProf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellidos:" />

        <EditText
            android:id="@+id/txt_apepro"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.68"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp" >

        <TextView
            android:id="@+id/lbl_hora_ingreso"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:text="NIT:" />

        <EditText
            android:id="@+id/txt_nitpro"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.68"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp" >

        <TextView
            android:id="@+id/lbl_nombre_profesional"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="Titulo:" />

        <EditText
            android:id="@+id/txt_titupro"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.68"
            android:ems="10"
            android:inputType="textPersonName" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp" >

        <TextView
            android:id="@+id/txtUsuUsuarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Institucion" />

        <EditText
            android:id="@+id/txt_institucion"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.68"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_registrarpro"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:text="Registrar" />
    </LinearLayout>

    <Button
        android:id="@+id/btnCanPro"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Cancelar" />

</LinearLayout>