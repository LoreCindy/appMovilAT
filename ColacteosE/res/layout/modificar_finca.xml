            android:id="@+id/btn_actuFinca"
            android:layout_width="match_parent"
        android:layout_height="68dp"
            android:text="@string/Actualizar" />

        <Button
            android:id="@+id/btn_elimFinca"
           android:layout_width="match_parent"
        android:layout_height="68dp"
            android:text="@string/Eliminar" />
        
