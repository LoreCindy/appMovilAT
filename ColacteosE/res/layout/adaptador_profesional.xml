<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <TextView
        android:id="@+id/id_Profesional"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        

        <TextView
            android:id="@+id/txtNomPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NomProfesional"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="." />

        <TextView
            android:id="@+id/txtapeProd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ApeProfesional"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtnitPro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NitProfesional"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txttitPro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TiTProfesional"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txtInsPro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="InsProfesional"
        android:textAppearance="?android:attr/textAppearanceLarge" 
    	 android:visibility="gone" />

</LinearLayout>
